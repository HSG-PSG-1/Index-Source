@using HSG.Helper
@* Small place holder diaplayed along with the top header *@
@{
    string LogOnHTML = "";    
    string template = "Welcome {0} ({1}) ";    
 }
    @if(_SessionUsr.ID == -1){
        <span>[ @Html.ActionLink("Log On", "Login", "Common") ]</span>
    }
    else
    {
        LogOnHTML = string.Format(template, _SessionUsr.UserName, _SessionUsr.Email);
        <span>@LogOnHTML [ @Html.ActionLink("Log Off", "Login", "Common", new { from = "logoff" }, null) ] </span>
    }
